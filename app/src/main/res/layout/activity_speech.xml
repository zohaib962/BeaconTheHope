<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beacon.zohaib.beacon.SpeechActivity">


    <EditText
        android:id="@+id/speechET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Type Here..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:singleLine="false"
        />
    <android.support.constraint.Guideline
        android:id="@+id/centerHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/speechBtn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/centerHorizontal"
        app:layout_constraintStart_toStartOf="@id/speechET"
        app:layout_constraintEnd_toEndOf="@id/speechET"
        android:src="@drawable/fspeech_icon"
        android:onClick="speak"
        />

</android.support.constraint.ConstraintLayout>
