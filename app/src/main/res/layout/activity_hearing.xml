<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beacon.zohaib.beacon.HearingActivity">


    <android.support.constraint.Guideline
        android:id="@+id/centerHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7"
        />

    <android.support.constraint.Guideline
        android:id="@+id/centerHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        />
    <TextView
        android:id="@+id/textHeardTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Touch the button to start hearing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerHorizontal1"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:singleLine="false"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/micBtn"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="5dp"
        android:src="@drawable/mic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/centerHorizontal"
        android:onClick="getSpeechInput"
        />
</android.support.constraint.ConstraintLayout>
