<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/medicationCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/medicationTypeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication Type"
                android:textSize="16sp"
                android:textColor="#B71C1C"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id="@+id/medicationTypeET"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="e.g. Vitamin C"
                app:layout_constraintStart_toStartOf="@id/medicationTypeTV"
                app:layout_constraintTop_toBottomOf="@id/medicationTypeTV"
                />

            <TextView
                android:id="@+id/dosageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage"
                android:textSize="16sp"
                android:textColor="#B71C1C"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@id/medicationTypeET"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/dosageET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="e.g. 100"
                app:layout_constraintStart_toStartOf="@id/dosageTV"
                app:layout_constraintTop_toBottomOf="@id/medicationTypeTV"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mg"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/dosageET"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/reminderCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintStart_toStartOf="@id/medicationCV"
        app:layout_constraintEnd_toEndOf="@id/medicationCV"
        app:layout_constraintTop_toBottomOf="@id/medicationCV"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            >
        <TextView
            android:id="@+id/reminderTimesTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Times"
            android:textSize="16sp"
            android:textColor="#B71C1C"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Switch
            android:id="@+id/reminderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            />
            <Spinner
                android:id="@+id/reminderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/reminderTimesTV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                ></Spinner>

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#B71C1C"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/reminderSpinner"
                app:layout_constraintTop_toBottomOf="@id/reminderSpinner"
                android:layout_marginTop="16dp"
                />
            <ImageView
                android:id="@+id/plusIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                app:layout_constraintEnd_toEndOf="@id/reminderSpinner"
                app:layout_constraintTop_toBottomOf="@id/reminderSpinner"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/dosageNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 1"
                android:textColor="#B71C1C"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/plusIV"
                app:layout_constraintTop_toBottomOf="@id/reminderSpinner"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />

            <ImageView
                android:id="@+id/minusIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                app:layout_constraintEnd_toStartOf="@id/dosageNumberTV"
                app:layout_constraintTop_toBottomOf="@id/reminderSpinner"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/timeTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#B71C1C"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/timeTV"
                app:layout_constraintTop_toBottomOf="@id/timeTV"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/plusIV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                app:layout_constraintEnd_toEndOf="@id/plusIV"
                app:layout_constraintTop_toBottomOf="@id/plusIV"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/dosageNumberTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 1"
                android:textColor="#B71C1C"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/plusIV2"
                app:layout_constraintTop_toBottomOf="@id/dosageNumberTV"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />

            <ImageView
                android:id="@+id/minusIV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                app:layout_constraintEnd_toStartOf="@id/dosageNumberTV2"
                app:layout_constraintTop_toBottomOf="@id/minusIV"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />


            <TextView
                android:id="@+id/timeTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="#B71C1C"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/timeTV2"
                app:layout_constraintTop_toBottomOf="@id/timeTV2"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/plusIV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                app:layout_constraintEnd_toEndOf="@id/plusIV2"
                app:layout_constraintTop_toBottomOf="@id/plusIV2"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/dosageNumberTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 1"
                android:textColor="#B71C1C"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/plusIV3"
                app:layout_constraintTop_toBottomOf="@id/dosageNumberTV2"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />

            <ImageView
                android:id="@+id/minusIV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                app:layout_constraintEnd_toStartOf="@id/dosageNumberTV3"
                app:layout_constraintTop_toBottomOf="@id/minusIV2"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/scheduleCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/reminderCV"
        app:layout_constraintEnd_toEndOf="@id/reminderCV"
        app:layout_constraintTop_toBottomOf="@id/reminderCV"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/scheduleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="16sp"
                android:textColor="#B71C1C"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <TextView
                android:id="@+id/startDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: "
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@id/scheduleTV"
                app:layout_constraintTop_toBottomOf="@id/scheduleTV"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="14sp"
                android:textColor="#B71C1C"
                app:layout_constraintStart_toEndOf="@id/startDateTV"
                app:layout_constraintTop_toBottomOf="@id/scheduleTV"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:id="@+id/seperationIV"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateTV"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/durationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@id/seperationIV"
                app:layout_constraintTop_toBottomOf="@id/seperationIV"
                android:layout_marginTop="8dp"
                />
            <RadioGroup
                android:id="@+id/durationRG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/durationTV"
                app:layout_constraintTop_toBottomOf="@id/durationTV"
                android:layout_marginTop="8dp"
                >

                <RadioButton
                    android:id="@+id/continousRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continous"
                    android:buttonTint="#EC1F27"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/daysRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Days"
                    android:buttonTint="#EC1F27"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </RadioGroup>
            <ImageView
                android:id="@+id/seperationIV2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/durationRG"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/daysTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@id/seperationIV2"
                app:layout_constraintTop_toBottomOf="@id/seperationIV2"
                android:layout_marginTop="8dp"
                />

            <RadioGroup
                android:id="@+id/daysRG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/daysTV"
                app:layout_constraintTop_toBottomOf="@id/daysTV"
                android:layout_marginTop="8dp"
                >

                <RadioButton
                    android:id="@+id/everydayRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Everyday"
                    android:buttonTint="#EC1F27"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/specificDayRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specific days of the week"
                    android:buttonTint="#EC1F27"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />

                <RadioButton
                    android:id="@+id/intervalDaysRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Interval"
                    android:buttonTint="#EC1F27"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    />
            </RadioGroup>

           </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:background="@drawable/round_btn"
        app:layout_constraintEnd_toEndOf="@id/scheduleCV"
        app:layout_constraintTop_toBottomOf="@id/scheduleCV"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        />
</android.support.constraint.ConstraintLayout>
</ScrollView>